pipeline {
    agent any

    tools {
        nodejs 'nodejs' // Assurez-vous que la configuration Node.js inclut Yarn
    }

    stages {
        stage('Build') {
            steps {
                echo 'Building the project...'
                sh 'yarn install'
            }
        }

        stage('Test') {
            steps {
                echo 'Testing'
                sh 'yarn test'
            }
        }

        stage('Deploy / Deliver') {
            steps {
                echo 'Deploying...'
                sh 'yarn build'
            }
            post {
                always {
                    archiveArtifacts artifacts: 'build/**/*.*', onlyIfSuccessful: true
                }
            }
        }
    }
}
